---
import Image from "astro/components/Image.astro";
import AddItemCartButton from "./AddItemCartButton";
import type { CategoryInterface } from "../../../../interfaces/MenuItemInterface";

interface Props {
  id: number;
  name: string;
  description: string;
  price: string;
  image: string;
  category: CategoryInterface;
  featured?: boolean;
}

const {
  id,
  name,
  description,
  price,
  image,
  category,
  featured = false,
} = Astro.props;
---

<div class={`h-full transform transition-all duration-300`}>
  <div
    class={`bg-white rounded-lg shadow-md overflow-hidden h-full ${featured ? "border-2 border-[#E56053]" : "border border-gray-200"}`}
  >
    <div class="relative h-48">
      <Image
        src={image}
        alt={name}
        class="object-cover transition-transform duration-300"
        loading="lazy"
        width={375}
        height={190}
      />
      {
        featured && (
          <span class="absolute top-2 right-2 bg-[#E56053] text-white text-xs font-medium px-2 py-1 rounded-full">
            Recomendado
          </span>
        )
      }
    </div>
    <div class="p-4">
      <h3 class="text-xl font-bold mb-2">{name}</h3>
      <p class="text-gray-600 text-sm line-clamp-3 mb-4">{description}</p>
      <div class="flex justify-between items-center">
        <span class="font-bold text-lg text-[#E56053]">{price}</span>
        <AddItemCartButton
          id={id}
          name={name}
          description={description}
          price={price}
          image={image}
          category={category}
          client:load
        />
      </div>
    </div>
  </div>
</div>
