---
import LucidePhone from "../../assets/icons/lucide/LucidePhone.astro";
import LucideInstagram from "../../assets/icons/lucide/LucideInstagram.astro";
import GgFacebook from "../../assets/icons/css.gg/GgFacebook.astro";
---

<section id="ubicacion" class="py-16 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex flex-col items-center justify-center mb-12 text-center">
      <span
        class="mb-4 bg-[#E56053] text-white text-sm font-medium px-3 py-1 rounded-full"
        >Ubicación</span
      >
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
        Encuéntranos
      </h2>
      <p class="mt-4 text-gray-600 md:text-xl">
        Visítanos y disfruta de nuestras deliciosas hamburguesas
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 items-center">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div
          class="aspect-video w-full h-[400px] bg-gray-200 flex items-center justify-center"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3973.614695921012!2d-80.66621012424652!3d-5.165522352172566!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x904a1bc70db638b1%3A0x83a506b487012bac!2s100%25%20PANAS!5e0!3m2!1ses!2spe!4v1749449071656!5m2!1ses!2spe"
            style="border:0; width:100%; height:100%;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>

      <div class="space-y-6">
        <div class="space-y-2">
          <h3 class="text-2xl font-bold">Dirección</h3>
          <p class="text-gray-600">Av. Principal, Piura 20009, Perú</p>
          <p class="text-gray-600">Referencia: Al lado de Tiendas MASS</p>
        </div>

        <div class="space-y-2">
          <h3 class="text-2xl font-bold">Horario</h3>
          <ul class="space-y-1">
            <li class="flex justify-between">
              <span>Lunes - Viernes</span>
              <span>18:00 - 00:30</span>
            </li>
            <li class="flex justify-between">
              <span>Sábado</span>
              <span>18:00 - 01:30</span>
            </li>
            <li class="flex justify-between">
              <span>Domingo</span>
              <span>18:00 - 01:00</span>
            </li>
          </ul>
        </div>

        <div class="space-y-2">
          <h3 class="text-2xl font-bold">Contacto</h3>
          <p class="flex items-center gap-2">
            <LucidePhone class="h-5 w-5 text-[#E56053]" />
            <span>+51 999 999 999</span>
          </p>
        </div>

        <div class="space-y-2">
          <h3 class="text-2xl font-bold">Síguenos</h3>
          <div class="flex gap-4">
            <button
              class="p-3 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors"
            >
              <LucideInstagram class="h-5 w-5" />
            </button>
            <button
              class="p-3 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors"
            >
              <GgFacebook class="h-5 w-5" />
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
